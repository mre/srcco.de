{#  -*- coding: utf-8 -*- #}
{% import 'base_helper.tmpl' as base with context %}
{% import 'annotation_helper.tmpl' as annotations with context %}
{{ set_locale(lang) }}
<!DOCTYPE html>
<html
{% if comment_system == 'facebook' %}
xmlns:fb="http://ogp.me/ns/fb#"
{% endif %}
lang="{{ lang }}">
<head>
    {{ base.html_head() }}
    {% block extra_head %}
    {% endblock %}
    {{ extra_head_data }}
</head>
<body>
    <div id="wrp">
        <div id="cont">
            <div id="page">
                <header>
                    <h1>
                        <a href="{{ abs_link('/') }}" title="{{ blog_title }}" rel="home">{{ blog_title }}</a>
                    </h1>
                </header>
                <div id="body">
                    <nav>
                        <ul>{{ base.html_navigation_links() }}</ul>
                    </nav>
                    <div id="content">
                        {% block content %}{% endblock %}
                    </div>
                </div>
                <div id="ftr">
                </div>
            </div>
        </div>
    </div>
	<footer>
        <small>{{ content_footer }}</small>
	</footer>
    {{ base.late_load_js() }}
</body>
